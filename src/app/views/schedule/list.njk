{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Ol√°, {{ user.name }}</strong>
    <p>Veja sua agenda do dia:</p>

    {% if appointments.length == 0 %}
      <p>Agenda vazia!</p>
    {% endif %}

    <ul class="providers">
      {% for appointment in appointments %}
        <li class="provider">
          <div>
            <img src="/files/{{ appointment.user.avatar }}">
            <strong>
              {{ appointment.user.name }}<br>
              {{ appointment.date | date("HH:mm") }}
            </strong>
          </div>

        </li>
      {% endfor %}
    </ul>


  </div>
{% endblock %}
